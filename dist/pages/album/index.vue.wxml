<template name="0acf8ab6">
  <view class="_div data-v-43c7afd3 album">
    <view class="_div data-v-43c7afd3 album-info">
      <image src="{{album.img}}" alt class="_img data-v-43c7afd3"></image>
      <view class="_div data-v-43c7afd3 album-title">
        <view class="_h3 data-v-43c7afd3">{{album.title}}</view>
        <view class="_h3 data-v-43c7afd3">创建者: {{album.userName}}</view> <text class="_text data-v-43c7afd3">{{album.normalInfo}}</text>
      </view>
    </view>
    <view class="_h4 data-v-43c7afd3">歌单歌曲(共{{songLen}}首)</view>
    <view class="_div data-v-43c7afd3 album-list">
      <van-cell wx:if="{{!isEdit}}" icon="play" border="{{false}}" class="_van-cell data-v-43c7afd3">
        <view bindtap="handleProxy" slot="title" data-eventid="{{'0'}}" data-comkey="{{$k}}" class="_view data-v-43c7afd3"><label class="_span data-v-43c7afd3 van-cell-text">播放全部</label></view> <text bindtap="handleProxy" data-eventid="{{'1'}}" data-comkey="{{$k}}" class="_text data-v-43c7afd3"> 编辑 </text>
      </van-cell>
      <van-cell wx:if="{{isEdit}}" icon="wap-nav" border="{{false}}" class="_van-cell data-v-43c7afd3">
        <view bindtap="handleProxy" slot="title" data-eventid="{{'2'}}" data-comkey="{{$k}}" class="_view data-v-43c7afd3"><label class="_span data-v-43c7afd3 van-cell-text">加入歌单</label></view> <text bindtap="handleProxy" data-eventid="{{'3'}}" data-comkey="{{$k}}" class="_text data-v-43c7afd3"> 完成 </text>
      </van-cell>
      <van-cell wx:if="{{isEdit}}" clickable title="全选" data-name="all" bindtap="handleProxy" data-eventid="{{'4'}}" data-comkey="{{$k}}" class="_van-cell data-v-43c7afd3">
        <van-checkbox value="{{checkAll}}" class="_van-checkbox data-v-43c7afd3"></van-checkbox>
      </van-cell>
      <scroll-view scroll-y class="_scroll-view data-v-43c7afd3 album-items">
        <van-checkbox-group value="{{result}}" class="_van-checkbox-group data-v-43c7afd3">
          <van-cell-group class="_van-cell-group data-v-43c7afd3">
            <van-cell title="{{item.title}}" wx:key="i" key="{{i}}" clickable data-id="{{item.id}}" bindtap="handleProxy" data-eventid="{{'5-'+i}}" data-comkey="{{$k}}" wx:for="{{album.songList}}" wx:for-index="i" wx:for-item="item" class="_van-cell data-v-43c7afd3">
              <van-checkbox wx:if="{{isEdit}}" name="{{item.id}}" class="_van-checkbox data-v-43c7afd3"></van-checkbox>
            </van-cell>
          </van-cell-group>
        </van-checkbox-group>
      </scroll-view>
    </view>
  </view>
</template>